<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".volunteers.announcementShare.AnnouncementShareFragment"
        android:orientation="vertical"
        android:background="@drawable/background_red_green"
        android:layout_gravity="center"
        android:gravity="center"
        >

    <TextView
            android:id="@+id/announcementShareWriter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            />


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:elevation="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@android:color/white"
            >


        <EditText
                android:id="@+id/announcementShareHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Duyuru Başlığı:"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="16sp"

                />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:elevation="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@android:color/white"
            android:minHeight="150dp"
            >


        <EditText
                android:id="@+id/announcementShareText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mesajınızı yazınız:"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="12sp"

                />

    </androidx.cardview.widget.CardView>

    <Button
            android:id="@+id/announcementShareButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAYLAŞ"
            android:textStyle="bold"
            android:background="@drawable/rounded_background_white"
            android:textColor="@color/colorPrimary"
            android:elevation="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:onClick="shareAnnouncement"

            />

</LinearLayout>