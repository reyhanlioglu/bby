<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        >



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".volunteers.examResultShare.ExamResultShareFragment"
            android:orientation="vertical"
            android:layout_margin="16dp"
            >

        <TextView
                android:id="@+id/examResultStudentUid"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                />
        <TextView
                android:id="@+id/examResultStudentClass"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                />
        <TextView
                android:id="@+id/examResultStudentName"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                />

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:elevation="8dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/colorPrimary"
                >



                <EditText
                        android:id="@+id/examResultExamName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Denemenin Adını Giriniz:"
                        android:textColorHint="@android:color/white"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:layout_margin="8dp"
                        />

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:elevation="8dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#2196F3"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Matematik"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_margin="8dp"
                        />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                    <EditText
                            android:id="@+id/examResultMatD"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Doğru:"
                            android:paddingLeft="8dp"
                            android:paddingStart="8dp"
                            android:inputType="numberSigned"
                            android:background="@drawable/rounded_background_white"
                            android:textColor="@android:color/holo_blue_light"
                            android:textColorHint="@android:color/holo_blue_light"
                            android:layout_margin="8dp"
                            android:textCursorDrawable="@android:color/black"
                            />

                    <EditText
                            android:id="@+id/examResultMatY"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Yanlış:"
                            android:paddingLeft="8dp"
                            android:paddingStart="8dp"
                            android:inputType="numberSigned"
                            android:background="@drawable/rounded_background_orange"
                            android:textColor="@android:color/white"
                            android:textColorHint="#D6F8F8"
                            android:layout_margin="8dp"
                            android:textCursorDrawable="@android:color/black"
                            />


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:elevation="8dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#FDE181"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Türkçe"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_margin="8dp"
                        />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                    <EditText
                            android:id="@+id/examResultTurD"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Doğru:"
                            android:paddingLeft="8dp"
                            android:paddingStart="8dp"
                            android:inputType="numberSigned"
                            android:background="@drawable/rounded_background_white"
                            android:textColor="@android:color/holo_blue_light"
                            android:textColorHint="@android:color/holo_blue_light"
                            android:layout_margin="8dp"
                            android:textCursorDrawable="@android:color/black"
                            />

                    <EditText
                            android:id="@+id/examResultTurY"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Yanlış:"
                            android:paddingLeft="8dp"
                            android:paddingStart="8dp"
                            android:inputType="numberSigned"
                            android:background="@drawable/rounded_background_orange"
                            android:textColor="@android:color/white"
                            android:textColorHint="#D6F8F8"
                            android:layout_margin="8dp"
                            android:textCursorDrawable="@android:color/black"
                            />


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:elevation="8dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#03B17A"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fen"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_margin="8dp"
                        />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                    <EditText
                            android:id="@+id/examResultFenD"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Doğru:"
                            android:paddingLeft="8dp"
                            android:paddingStart="8dp"
                            android:inputType="numberSigned"
                            android:background="@drawable/rounded_background_white"
                            android:textColor="@android:color/holo_blue_light"
                            android:textColorHint="@android:color/holo_blue_light"
                            android:layout_margin="8dp"
                            android:textCursorDrawable="@android:color/black"
                            />

                    <EditText
                            android:id="@+id/examResultFenY"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Yanlış:"
                            android:paddingLeft="8dp"
                            android:paddingStart="8dp"
                            android:inputType="numberSigned"
                            android:background="@drawable/rounded_background_orange"
                            android:textColor="@android:color/white"
                            android:textColorHint="#D6F8F8"
                            android:layout_margin="8dp"
                            android:textCursorDrawable="@android:color/black"
                            />


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:elevation="8dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#673AB7"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sosyal"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_margin="8dp"
                        />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                    <EditText
                            android:id="@+id/examResultSosD"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Doğru:"
                            android:paddingLeft="8dp"
                            android:paddingStart="8dp"
                            android:inputType="numberSigned"
                            android:background="@drawable/rounded_background_white"
                            android:textColor="@android:color/holo_blue_light"
                            android:textColorHint="@android:color/holo_blue_light"
                            android:layout_margin="8dp"
                            android:textCursorDrawable="@android:color/black"
                            />

                    <EditText
                            android:id="@+id/examResultSosY"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Yanlış:"
                            android:paddingLeft="8dp"
                            android:paddingStart="8dp"
                            android:inputType="numberSigned"
                            android:background="@drawable/rounded_background_orange"
                            android:textColor="@android:color/white"
                            android:textColorHint="#D6F8F8"
                            android:layout_margin="8dp"
                            android:textCursorDrawable="@android:color/black"
                            />


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>




            <Button
                    android:id="@+id/examResultShareButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PAYLAŞ"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_background_white"
                    android:textColor="@color/colorPrimary"
                    android:elevation="8dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="36dp"
                    android:layout_marginRight="36dp"
                    android:layout_marginLeft="36dp"
                    android:onClick="shareExamResult"

                    />



    </LinearLayout>


</ScrollView>